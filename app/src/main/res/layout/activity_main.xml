<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.terry.dmtools.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="DM Tools"
            android:textAlignment="center"
            android:textSize="32sp" />

        <Button
            android:id="@+id/characterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Character" />

        <Button
            android:id="@+id/newWorldButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New World" />

        <Button
            android:id="@+id/loadWorldButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load World" />

        <Button
            android:id="@+id/miscToolsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Misc Tools" />
    </LinearLayout>

</RelativeLayout>
